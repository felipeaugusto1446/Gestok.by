{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestok.by",
    "description": "Esta API tem como objetivo o controle de estoque completo do sistema Gestok.by.",
    "termsOfService": "http://localhost:3333/terms",
    "contact": {
      "email": "yourEmail@outlook.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/v1/user": {
      "post": {
        "description": "Criar usuário",
        "requestBody": {
          "description": "Dados necessários para a criação de um novo usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateUser"
              },
              "example": {
                "name": "Felipe",
                "email": "teste@gmail.com",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/session": {
      "post": {
        "description": "Autentica o usuário e retorna o token JWT",
        "requestBody": {
          "description": "Dados necessários para autenticação do usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestAuthUser"
              },
              "example": {
                "email": "teste@gmail.com",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseAuthUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/me": {
      "get": {
        "description": "Retorna as informações do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Usuário autenticado retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/user/remove": {
      "delete": {
        "description": "Remover usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Usuário removido com sucesso"
          }
        }
      }
    },
    "/v1/category": {
      "post": {
        "description": "Criar nova categoria",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados de entrada necessários para criar categoria",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateCategory"
              },
              "example": {
                "name": "Laticínios"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Categoria criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateCategory"
                }
              }
            }
          }
        }
      }
    },
    "/v1/category/edit": {
      "put": {
        "description": "Editar uma categoria existente",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para editar categoria",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateCategory"
              },
              "example": {
                "id": "b9f4d87a-84a3-4bc8-8a2b-654321fabc12",
                "name": "Derivados de Leite"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Categoria atualizada com sucesso"
          }
        }
      }
    },
    "/v1/category/all": {
      "get": {
        "description": "Lista todas as categorias",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Categorias listadas com sucesso"
          }
        }
      }
    },
    "/v1/category/remove": {
      "delete": {
        "description": "Remover categoria",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "ID da categoria a ser removida",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "4e59f8e5-931a-4d99-930d-a5c6f96a12e2" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Categoria removida com sucesso" }
        }
      }
    },
    "/v1/product": {
      "post": {
        "description": "Criar novo produto",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para criar produto",
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateProduct"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto criado com sucesso" }
        }
      }
    },
    "/v1/product/edit": {
      "put": {
        "description": "Editar um produto existente",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para editar produto",
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/RequestEditProduct"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto atualizado com sucesso" }
        }
      }
    },
    "/v1/product/all": {
      "get": {
        "description": "Lista todos os produtos cadastrados",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Produtos listados com sucesso" }
        }
      }
    },
    "/v1/product/remove": {
      "delete": {
        "description": "Remove um produto pelo ID",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "ID do produto a ser removido",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "8b226736-5cee-475e-9b89-59bb766059cd" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto removido com sucesso" }
        }
      }
    },
    "/v1/batch": {
      "post": {
        "description": "Criar novo lote",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para criar um lote",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateBatch"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Lote criado com sucesso" }
        }
      }
    },
    "/v1/batch/edit": {
      "put": {
        "description": "Editar lote existente",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para editar um lote",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestEditBatch"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Lote atualizado com sucesso" }
        }
      }
    },
    "/v1/batch/remove": {
      "delete": {
        "description": "Remover lote",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "ID do lote a ser removido",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string", "example": "4a123456-5cee-475e-9b89-59bb766059cd" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Lote removido com sucesso" }
        }
      }
    },
    "/v1/notifications": {
      "get": {
        "description": "Verifica notificações de validade de lotes",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Notificações retornadas com sucesso" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCreateUser": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "ResponseCreateUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "RequestAuthUser": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "ResponseAuthUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "token": { "type": "string" }
        }
      },
      "RequestCreateCategory": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      },
      "ResponseCreateCategory": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "RequestCreateProduct": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "price": { "type": "number" },
          "description": { "type": "string" },
          "file": { "type": "string", "format": "binary" }
        }
      },
      "RequestEditProduct": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "description": { "type": "string" },
          "file": { "type": "string", "format": "binary" }
        }
      },
      "RequestCreateBatch": {
        "type": "object",
        "properties": {
          "product_id": { "type": "string" },
          "brand": { "type": "string" },
          "quantity": { "type": "number" }
        }
      },
      "RequestEditBatch": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "brand": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação utilizando JWT",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
