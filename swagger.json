{
  "openapi": "3.0.0",
  "info": {
    "title": "Gestok.by",
    "description": "Esta API tem como objetivo o controle de estoque completo do sistema Gestok.by.",
    "termsOfService": "http://localhost:3333/terms",
    "contact": {
      "email": "felipeaugusto.2439@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/v1/user": {
      "post": {
        "description": "Criar usuário",
        "requestBody": {
          "description": "Dados necessários para criar um novo usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateUser"
              },
              "example": {
                "razao_social": "Laticínio Boa Esperança LTDA",
                "cnpj": "12.345.678/0001-90",
                "phone": "(35) 98888-7777",
                "email": "teste@gmail.com",
                "password": "123456",
                "confirmPassword": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/session": {
      "post": {
        "description": "Autentica o usuário e retorna o token JWT",
        "requestBody": {
          "description": "Dados necessários para autenticação do usuário",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestAuthUser"
              },
              "example": {
                "email": "teste@gmail.com",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseAuthUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/me": {
      "get": {
        "description": "Retorna as informações do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Usuário autenticado retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateUser"
                }
              }
            }
          }
        }
      }
    },
    "/v1/user/edit": {
      "put": {
        "description": "Editar dados do usuário (razão social, CNPJ, telefone ou e-mail)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Campos que podem ser alterados: razao_social, cnpj, phone, email",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestEditUser"
              },
              "example": {
                "user_id": "b9f4d87a-84a3-4bc8-8a2b-654321fabc12",
                "razao_social": "Laticínio Boa Esperança LTDA",
                "cnpj": "12.345.678/0001-90",
                "phone": "(35) 98888-7777",
                "email": "teste@gmail.com"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseEditUser"
                }
              }
            }
          },
          "400": {
            "description": "Erro ao atualizar usuário"
          }
        }
      }
    },
    "/v1/user/remove": {
      "delete": {
        "description": "Remover usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Usuário removido com sucesso"
          }
        }
      }
    },
    "/v1/category": {
      "post": {
        "description": "Criar nova categoria",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados de entrada necessários para criar categoria",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateCategory"
              },
              "example": {
                "name": "Laticínios"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Categoria criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCreateCategory"
                }
              }
            }
          }
        }
      }
    },
    "/v1/category/all": {
      "get": {
        "description": "Lista todas as categorias",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Categorias listadas com sucesso"
          }
        }
      }
    },
    "/v1/product": {
      "post": {
        "description": "Criar novo produto",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para criar produto",
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateProduct"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Produto criado com sucesso" }
        }
      }
    },
    "/v1/batch": {
      "post": {
        "description": "Criar novo lote",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "description": "Dados necessários para criar um lote",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCreateBatch"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Lote criado com sucesso" }
        }
      }
    },
    "/v1/notifications": {
      "get": {
        "description": "Verifica notificações de validade de lotes",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Notificações retornadas com sucesso" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCreateUser": {
        "type": "object",
        "properties": {
          "razao_social": { "type": "string" },
          "cnpj": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "confirmPassword": { "type": "string" }
        }
      },
      "ResponseCreateUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "razao_social": { "type": "string" },
          "cnpj": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "RequestAuthUser": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "ResponseAuthUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "razao_social": { "type": "string" },
          "email": { "type": "string" },
          "token": { "type": "string" }
        }
      },
      "RequestEditUser": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "razao_social": { "type": "string" },
          "cnpj": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "ResponseEditUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "razao_social": { "type": "string" },
          "cnpj": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "RequestCreateCategory": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      },
      "ResponseCreateCategory": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "RequestCreateProduct": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "price": { "type": "number" },
          "description": { "type": "string" },
          "file": { "type": "string", "format": "binary" }
        }
      },
      "RequestCreateBatch": {
        "type": "object",
        "properties": {
          "product_id": { "type": "string" },
          "brand": { "type": "string" },
          "quantity": { "type": "number" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "description": "Autenticação utilizando JWT",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
