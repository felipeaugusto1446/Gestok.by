{
  "compilerOptions": {
    // DiretÃ³rios (se quiser buildar com tsc no futuro)
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Ambiente
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Tipos
    "types": ["node"],

    // Outras saÃ­das
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Checagem estrita
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // OpÃ§Ãµes recomendadas
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ðŸ‘‡ ESSENCIAL para rodar o Express com import default
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
